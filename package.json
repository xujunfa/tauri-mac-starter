{
  "name": "tauri-mac-starter",
  "private": true,
  "version": "0.1.0",
  "description": "A production-ready Tauri v2 + React template for macOS desktop apps",
  "type": "module",
  "scripts": {
    "gen:ipc": "node scripts/generate-ipc-types.mjs",
    "gen:ipc:check": "node scripts/generate-ipc-types.mjs --check",
    "prebuild": "pnpm gen:ipc",
    "pretest": "pnpm gen:ipc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "fmt:rust": "cargo fmt --manifest-path src-tauri/Cargo.toml --all",
    "fmt:rust:check": "cargo fmt --manifest-path src-tauri/Cargo.toml --all --check",
    "lint:rust": "cargo clippy --manifest-path src-tauri/Cargo.toml --all-targets --all-features -- -D warnings",
    "test:rust": "cargo test --manifest-path src-tauri/Cargo.toml",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@tanstack/react-query": "^5",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-global-shortcut": "^2",
    "@tauri-apps/plugin-notification": "^2",
    "@tauri-apps/plugin-sql": "^2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "jotai": "^2",
    "lucide-react": "^0.563.0",
    "radix-ui": "^1.4.3",
    "react": "^19",
    "react-dom": "^19",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tailwindcss/vite": "^4",
    "@tauri-apps/cli": "^2.10.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "jsdom": "^28.0.0",
    "shadcn": "^3.8.4",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.7",
    "typescript-eslint": "^8.55.0",
    "vite": "^6",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
